{
  "ci": {
    "collect": {
      "startServerCommand": "pnpm start:prod",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/tools",
        "http://localhost:3000/topics",
        "http://localhost:3000/pdf-tools/merge/merge-pdf",
        "http://localhost:3000/image-tools",
        "http://localhost:3000/date-tools",
        "http://localhost:3000/loan",
        "http://localhost:3000/salary",
        "http://localhost:3000/offline"
      ],
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.82 }],
        "categories:seo": ["error", { "minScore": 0.92 }],
        "categories:accessibility": ["error", { "minScore": 0.94 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }]
      }
    }
  }
}
