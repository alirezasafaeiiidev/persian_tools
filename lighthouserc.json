{
  "ci": {
    "collect": {
      "startServerCommand": "pnpm start:prod",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/pdf-tools/merge/merge-pdf",
        "http://localhost:3000/image-tools",
        "http://localhost:3000/loan",
        "http://localhost:3000/salary",
        "http://localhost:3000/offline"
      ],
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.95 }],
        "categories:seo": ["error", { "minScore": 0.95 }],
        "categories:accessibility": ["warn", { "minScore": 0.9 }]
      }
    }
  }
}
