# Server environment file for production
# Destination on server:
#   /var/www/persian-tools/shared/env/production.env
# Permissions:
#   chmod 600 /var/www/persian-tools/shared/env/production.env

NEXT_PUBLIC_SITE_URL=https://persiantoolbox.ir
NEXT_PUBLIC_SITE_NAME="جعبه ابزار فارسی"

# Google Search Console verification (optional, recommended)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Database (optional now; required for DB-backed admin + future paid features)
DATABASE_URL=
SESSION_TTL_DAYS=7
SUBSCRIPTION_WEBHOOK_SECRET=
ADMIN_EMAIL_ALLOWLIST=asdevelooper@gmail.com,parsairaniiidev@gmail.com,alirezasafaeiiidev@proton.me

# Self-hosted analytics (optional, recommended)
# 1) Set a public id (client-side)
# 2) Set ingest secret (server-side) and inject it via nginx for /api/analytics
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ENDPOINT=/api/analytics
ANALYTICS_DATA_DIR=/var/www/persian-tools/shared/analytics/production
ANALYTICS_INGEST_SECRET=

# App data directory (server-side)
APP_DATA_DIR=/var/www/persian-tools/shared/app/production

# Developer / Brand attribution
DEVELOPER_NAME="علیرضا صفایی"
